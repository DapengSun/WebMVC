
@{
    Layout = null;
}

<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>用户登录</title>
    <link href="~/Content/css/Login/styles.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/img/loginfavicon.ico"/>
</head>
<body>
    <div class="htmleaf-container">
        <div class="wrapper">
            <div class="container">
                <h1>Welcome</h1>

                <form class="form">
                    <input type="text" placeholder="Username" id="Username">
                    <input type="password" placeholder="Password" id="Password">
                    <button type="submit" id="login-button">用户登录</button>
                </form>
            </div>

            <ul class="bg-bubbles">
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li></li>
            </ul>
        </div>
    </div>

    <script src="~/Content/js/Login/jquery-2.1.1.min.js"></script>
    <script>
        $('#login-button').click(function (event) {
            UserLogin()
	        event.preventDefault();
	        $('form').fadeOut(500);
	        $('.wrapper').addClass('form-success');
	        setTimeout("delayer()", 3000);
        });

        function delayer(){
            window.location.href = "/Main/Index";
        }

        /**
         * 用户登陆
         */
        function UserLogin() {
            var Username = $("#Username").val();
            var Password = $("#Password").val();

            data = {
                Username : Username,
                Password : Password
            };

            $.ajax({
                type : "post",
                url: "/Account/UserLogin",
                data: data,
                async: false,
                dataType: "json",
                success: function (msg) {
                    if (msg.Success) {
                        
                    } else {
                        alert(msg.ErrorMessage);
                    }
                },
                error: function (msg) { }
            })
        }
    </script>

    <div style="text-align:center;margin:50px 0; font:normal 14px/24px 'MicroSoft YaHei';color:#000000">
        
    </div>
</body>
</html>